<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stage1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#575757"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".03">
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".12"
            android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/stage_line2"/>
            <ImageView
                android:id="@+id/upto_stage2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:background="@drawable/up1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight=".17"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="스쿼트\n30회"
                android:textSize="24sp"
                android:padding="5dp"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:textColor="#FFE607"
                android:layout_gravity="center"
                android:background="@drawable/buttonshape3"
                android:layout_weight=".25"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/dot1_3"
                android:layout_marginLeft="5dp"
                android:text="3"
                android:textSize="45sp"
                android:fontFamily="@font/kanit_black"
                android:gravity="center"
                android:textColor="#FFE607"
                android:layout_weight=".25"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/stage_img3"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".12"
            android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/stage_line1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight=".17"
            android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/stage_img1"
                android:padding="20dp"/>
            <TextView
                android:id="@+id/stage2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/dot1_3"
                android:layout_weight=".25"
                android:text="2"
                android:textSize="45sp"
                android:fontFamily="@font/kanit_black"
                android:gravity="center"
                android:textColor="#FFE607"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toStartOf="@id/stage2_text"/>
            <TextView
                android:id="@+id/stage2_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".25"
                android:layout_marginRight="15dp"
                android:background="@drawable/buttonshape3"
                android:gravity="center"
                android:padding="5dp"
                android:text="스쿼트\n20회"
                android:textColor="#FFE607"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".12"
            android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/stage_line2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight=".17"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="스쿼트\n10회"
                android:textSize="24sp"
                android:padding="5dp"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:textColor="#FFE607"
                android:layout_gravity="center"
                android:background="@drawable/buttonshape3"
                android:layout_weight=".25"/>
            <TextView
                android:id="@+id/stage1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/dot1_3"
                android:layout_weight=".25"
                android:text="1"
                android:textSize="45sp"
                android:fontFamily="@font/kanit_black"
                android:gravity="center"
                android:textColor="#FFE607"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:padding="40dp"
                android:background="@drawable/stage_img2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1">
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>